{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "app/*": ["src/app/*"],
      "data/*": ["src/data/*"],
      "images/*": ["src/images/*"],
      "destiny-icons/*": ["destiny-icons/*"],
      "locale/*": ["locale/*"],
      "testing/*": ["src/testing/*"],
      "docs/*": ["docs/*"],
      "*.css": ["config/css-stub.js"]
    },
    "typeRoots": ["src/dimApiTypeExtensions.d.ts", "node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
