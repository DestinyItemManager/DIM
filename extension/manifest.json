{
  "manifest_version": 2,
  "name": "Destiny Item Manager",
  "version": "4.0.0",
  "description": "Robust interface to manage gear, weapons, and items in Destiny.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "short_name": "DIM",
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://app.destinyitemmanager.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "offline_enabled": false
}
